<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ReleaseDemandActivity">


    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="11dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/icon_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发布需求"
            android:textColor="@color/color_system_blank"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/step1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/title"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="需求岗位"
                android:textColor="@color/color_system_blank"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_expert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="必须填写"
                android:singleLine="true"
                android:textColor="@color/color_system_blank"
                android:textColorHint="@color/color_system_gray"
                android:textSize="15sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="12sp"
            android:paddingRight="12sp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="服务地点"
                android:textColor="@color/color_system_blank"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_city"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:hint="必须填写"
                android:singleLine="true"
                android:textColor="@color/color_system_blank"
                android:textColorHint="@color/color_system_gray"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_right_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="12sp"
            android:paddingRight="12sp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="公司名称"
                android:textColor="@color/color_system_blank"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_compnay"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:hint="选填"
                android:singleLine="true"
                android:textColor="@color/color_system_blank"
                android:textColorHint="@color/color_system_gray"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_right_gray" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="12sp"
            android:paddingRight="12sp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="服务预算"
                android:textColor="@color/color_system_blank"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_budget"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:hint="选填"
                android:singleLine="true"
                android:textColor="@color/color_system_blank"
                android:textColorHint="@color/color_system_gray"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_right_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="12sp"
            android:paddingRight="12sp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="服务工期"
                android:textColor="@color/color_system_blank"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/et_gongqi"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="15dp"
                android:hint="选填"
                android:textColor="@color/color_system_blank"
                android:textColorHint="@color/color_system_gray"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_right_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="12sp"
            android:paddingRight="12sp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="需求截止日期"
                android:textColor="@color/color_system_blank"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/et_time"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="15dp"
                android:hint="选填"
                android:textColor="@color/color_system_blank"
                android:textColorHint="@color/color_system_gray"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_right_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:text="下一步 >>"
                android:textColor="@color/system_blue"
                android:textSize="16sp" />
        </RelativeLayout>

    </LinearLayout>


    <ScrollView
        android:id="@+id/step2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="需求背景："
                android:textColor="@color/color_system_blank"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/demand_release_bg"
                android:gravity="start"
                android:lines="5"
                android:textColor="@color/color_system_blank"
                android:textColorHint="@color/color_system_gray"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="需求详情："
                android:textColor="@color/color_system_blank"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/demand_release_bg"
                android:gravity="start"
                android:lines="5"
                android:textColor="@color/color_system_blank"
                android:textColorHint="@color/color_system_gray"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:text="要求："
                android:textColor="@color/color_system_blank"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/demand_release_bg"
                android:gravity="start"
                android:lines="5"
                android:textColor="@color/color_system_blank"
                android:textColorHint="@color/color_system_gray"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="上一步"
                android:textColor="@color/system_blue"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:background="@drawable/login_button_bg1"
                android:text="提交"
                android:textColor="@color/color_white"
                android:textSize="15dp" />
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginTop="60dp"/>


</RelativeLayout>