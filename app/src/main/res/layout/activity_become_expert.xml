<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical"
    tools:context=".activity.BecomeExpertActivity"
    tools:ignore="MissingDefaultResource">

    <include layout="@layout/title_bar" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_system_gray1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/color_white" />

    <com.xyz.step.FlowViewHorizontal
        android:id="@+id/flowview"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/color_white"
        android:paddingLeft="20dp"
        app:h_bg_color="#ddd"
        app:h_bg_radius="15dp"
        app:h_bg_width='2dp'
        app:h_max_step="4"
        app:h_pro_color="@color/system_blue"
        app:h_pro_radius='12dp'
        app:h_pro_width="2dp"
        app:h_text_padding='25dp'
        app:h_textsize='12sp'
        app:h_time_padding='30dp' />


    <LinearLayout
        android:id="@+id/ll_step1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="姓名"
                android:textColor="@color/color_system_gray"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="输入姓名"
                android:textColorHint="#ccc"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/color_system_gray1"
            android:paddingRight="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="工作年限"
                android:textColor="@color/color_system_gray"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_work_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="输入工作年限"
                android:inputType="number"
                android:textColorHint="#ccc"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/color_system_gray1"
            android:paddingRight="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="所在公司"
                android:textColor="@color/color_system_gray"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_compnay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="输入公司名称"
                android:textColorHint="#ccc"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/color_system_gray1"
            android:paddingRight="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="城市"
                android:textColor="@color/color_system_gray"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="输入所在城市"
                android:textColorHint="#ccc"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/color_system_gray1"
            android:paddingRight="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="职位"
                android:textColor="@color/color_system_gray"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="输入职位"
                android:textColorHint="#ccc"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/color_system_gray1"
            android:paddingRight="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="性别"
                android:textColor="@color/color_system_gray"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/group_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:textColor="@color/color_system_gray"
                    android:textSize="14sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="女"
                    android:textColor="@color/color_system_gray"
                    android:textSize="14sp" />
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_step2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        android:visibility="gone">

        <com.jayfang.dropdownmenu.DropDownMenu
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/login_button_bg1"
            android:gravity="center_horizontal"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tv_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="已选择："
            android:textSize="14sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_step3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.请上传您的身份证正面照片"
            android:textColor="@color/color_system_gray"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/iv_add1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_addpic_unfocused" />

            <ImageView
                android:id="@+id/delete1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon_cha"
                android:visibility="gone" />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="2.请上传您的身份证背面照片"
            android:textColor="@color/color_system_gray"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/iv_add2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_addpic_unfocused" />

            <ImageView
                android:id="@+id/delete2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon_cha"
                android:visibility="gone" />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="3.请上传您的相关专业证书照片"
            android:textColor="@color/color_system_gray"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/iv_add3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_addpic_unfocused" />

            <ImageView
                android:id="@+id/delete3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/icon_cha"
                android:visibility="gone" />

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_step4"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/color_white"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:background="@drawable/icon_shenhe" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="申请完成"
                android:textColor="@color/color_system_blank"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="我们会尽快通知您审核结果"
                android:textColor="@color/color_system_gray"
                android:textSize="14sp" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#eee">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_accent"
            android:text="上一步"
            android:textColor="@color/color_white" />

        <View
            android:id="@+id/view"
            android:layout_width="15dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/system_blue"
            android:text="下一步"
            android:textColor="@color/color_white" />


    </LinearLayout>


</LinearLayout>