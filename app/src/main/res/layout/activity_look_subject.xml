<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LookSubjectActivity"
    tools:ignore="MissingDefaultResource">

    <cn.jzvd.JZVideoPlayerStandard
        android:id="@+id/videoplayer"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/videoplayer"
        android:background="@android:color/white"
        app:tl_indicator_color="#f21314"
        app:tl_indicator_width_equal_title="true"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="#f21314"
        app:tl_textUnselectColor="#888"
        app:tl_textsize="14sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/tab_layout"
        android:background="@color/color_system_gray1" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view">

    </android.support.v4.view.ViewPager>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        app:borderWidth="0dp"
        app:elevation="3dp"
        app:fabSize="mini"
        android:src="@drawable/ic_add_24dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#12b4fd"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"/>
</RelativeLayout>