<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/buttom_bg"
    android:layout_height="48dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_main_home"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_main_home"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_home"/>
            <TextView
                android:id="@+id/tv_main_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="首页"
                android:textColor="@color/color_system_gray"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_expert"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_main_expert"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_expert"/>
            <TextView
                android:id="@+id/tv_main_expert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/color_system_gray"
                android:text="专家"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_forum"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_main_forum"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_forum"/>
            <TextView
                android:id="@+id/tv_main_forum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/color_system_gray"
                android:text="发现"
                android:textSize="10sp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_main_consult"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_main_consult"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_zixun"/>
            <TextView
                android:id="@+id/tv_main_consult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/color_system_gray"
                android:text="咨询"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_me"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_main_me"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_me"/>
            <TextView
                android:id="@+id/tv_main_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="我"
                android:textColor="@color/color_system_gray"
                android:textSize="10sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>