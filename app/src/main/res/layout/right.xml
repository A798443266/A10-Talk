<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/chat_from_createDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="2012-09-01 18:30:20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/chat_from_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ease_chatto_bg_focused"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginRight="3dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2dp"
            android:minHeight="40dp"
            android:text="有大吗。。。"
            android:textColor="@color/color_system_blank"
            android:textSize="16sp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cl_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/p" />


    </LinearLayout>

</LinearLayout>
