<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="200dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="@color/color_white"
    android:paddingLeft="10dp">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/tv_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_centerInParent="true"
            android:text="1"
            android:textSize="16sp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/iv_jiangpai"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_width="32dp"
            android:layout_height="42dp"
            android:background="@drawable/icon_rank1"/>

    </RelativeLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cv_user_pic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/rl"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:textSize="15sp"
        android:text="李小明"
        android:layout_toRightOf="@+id/cv_user_pic"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tv_name"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/tv_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职位"/>
        <TextView
            android:id="@+id/tv_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="15sp"
            android:textColor="@color/color_system_blank"
            android:text="行业"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/tv_leixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务评价："
            android:textColor="@color/color_system_gray"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8.88"
            android:textColor="#00b775"
            android:textSize="14sp"/>

    </LinearLayout>

</RelativeLayout>